@model MyFaceLib.Models.Post

<div class="overlay">
	@using (Html.BeginForm("PostPost", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
        <h2>Make a Post</h2>
		<div class="fdiv">
            Header
            @Html.TextAreaFor(x => x.postheader);
			Text
			@Html.TextAreaFor(x => x.textcontent)
			Image
            <input type="file" value="Browse..." name="file"/>
		</div>
		<input type="submit" value="Post" formmethod="post" formaction="PostPost"/>
	}
</div>