
@model List<myFaceLib.Models.Post>

<div>
	<a href="/Home/AddPost">Add a post</a>

	@foreach (myFaceLib.Models.Post p in Model)
    {
        <div class="Post">
            <h4>@p.postheader</h4>
            <img src="~/Content/Images/@p.imagefname" />
            <p>@p.textcontent</p>
            <div class="option bar">

                <a href="/Home/LikePost?id=@p.id">Like</a>
                <a href="/Home/DislikePost?id=@p.id">Dislike</a>

            </div>
        </div>
    }
</div>
